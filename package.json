{
  "name": "my-personal-assistant",
  "version": "1.0.0",
  "description": "Multi-service task integration dashboard for Cybozu, Gmail, and Asana",
  "main": "server/index.js",
  "scripts": {
    "install:all": "npm ci && cd client && npm ci && cd ..",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "build": "npm run client:build",
    "start": "node server/index.js",
    "server": "node server/index.js",
    "server:dev": "nodemon server/index.js",
    "client:dev": "cd client && npm start",
    "client:build": "cd client && npm run build",
    "client:install": "cd client && npm install",
    "server:install": "npm install",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up",
    "docker:up-prod": "docker-compose up app",
    "docker:up-dev": "docker-compose --profile dev up app-dev",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v --rmi all"
  },
  "keywords": [
    "task-management",
    "integration",
    "cybozu",
    "gmail",
    "asana",
    "dashboard",
    "personal-assistant",
    "productivity"
  ],
  "author": "My Personal Assistant",
  "license": "MIT",
  "dependencies": {
    "asana": "^0.18.14",
    "axios": "^1.5.0",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "googleapis": "^126.0.1",
    "helmet": "^7.0.0",
    "node-cron": "^3.0.2",
    "node-notifier": "^10.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1"
  }
}
